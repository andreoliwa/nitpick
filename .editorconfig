# https://editorconfig.org/
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{js,json,json5,yml,yaml,md,rb}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{rst,toml}]
# Unset indentation for some files, so codeclimate doesn't complain
# https://docs.codeclimate.com/docs/editorconfig
# rst: auto-generated Sphinx files
# toml: style files than contain YAML indented with 2 spaces
indent_size = unset
