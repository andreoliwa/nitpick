{
  "name": "nitpick",
  "version": "0.38.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreoliwa/nitpick.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "bash ./ci-prepare-cmd.sh ${nextRelease.version}",
          "publishCmd": "uv build && uv publish --token $PYPI_PASSWORD"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            ".bumpversion.cfg",
            "CHANGELOG.md",
            "README.md",
            "docs/configuration.md",
            "docs/quickstart.md",
            "mega-linter-plugin-nitpick/nitpick.megalinter-descriptor.yml",
            "nitpick-style.toml",
            "package.json",
            "pyproject.toml",
            "src/nitpick/__init__.py"
          ]
        }
      ]
    ]
  }
}
